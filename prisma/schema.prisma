generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @unique @default(uuid())
  firstName String
  lastName  String
  address   String?
  email     String    @unique
  phone     String?
  password  String
  Products  Product[]

  @@map("users")
}

model Product {
  id          String            @id @unique @default(uuid())
  title       String
  ownerId     String
  owner       User              @relation(fields: [ownerId], references: [id])
  categories  ProductCategory[]
  description String
  buyPrice    Float
  rentPrice   Float
  rentOption  RentOption

  @@map("products")
}

enum RentOption {
  DAILY
  WEEKLY
  MONTHLY
}

enum ProductCategory {
  ELECTRONICS
  FURNITURE
  HOME_APPLIANCES
  SPORTING_GOODS
  OUTDOOR
  TOYS
}
